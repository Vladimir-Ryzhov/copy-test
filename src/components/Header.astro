---
import Container from "./Container.astro";
import Navigation from "./Navigation.astro";
import Button from "./Button.astro";
import { DrawerMenu } from "../react-components/DrawerMenu.tsx";

const currentPath = Astro.url.pathname;
---

<header id="site-header" class="container-wrapper">
  <Container>
    <div class="inner-wrapper">
      <img src="/assets/icons/MainLogo.svg" alt="main logo" class="logo" />
      <div class="middle">
        <Navigation />
      </div>

      <div class="buttons-wrapper">
        <div class="btn">
          <Button href="/kontakt.html" text="Lass uns reden" />
        </div>
        <DrawerMenu currentPath={currentPath} client:only="react" />
      </div>
    </div>
  </Container>
</header>

<style lang="scss">
  .inner-wrapper {
    position: sticky;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 15px;
    padding-top: 15px;
  }

  header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: $color-white;

    transition-timing-function: box-shadow 0s $transition-timing-function;

    &.is-scrolled {
      box-shadow: 0px 7px 18px rgba(135, 21, 21, 0.05);

      transition-duration: $transition-duration;
    }
  }

  .logo {
    width: 130px;

    @include media-up-sm {
      width: 250px;
    }
  }

  .middle {
    display: none;

    @include media-up-xl {
      display: block;
    }
  }

  .buttons-wrapper {
    @include media-up-sm {
      display: flex;
      align-items: center;
      column-gap: 5px;
    }

    @include media-up-md {
      column-gap: 20px;
    }
  }

  .btn {
    display: none;

    @include media-up-sm {
      display: block;
    }
  }
</style>

<script is:inline>
  const header = document.getElementById("site-header");

  function onScroll() {
    header.classList.toggle("is-scrolled", window.scrollY > 0);
  }

  onScroll();
  window.addEventListener("scroll", onScroll, { passive: true });
</script>
